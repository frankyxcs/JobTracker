<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:clipChildren="false"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/datatype_choice_text"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="27dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:background="@drawable/circle_for_buttons_border"
        android:onClick="onNewFieldDatatypeSelected"
        android:src="@drawable/ic_datatype_text_48dp" />

    <ImageButton
        android:id="@+id/datatype_choice_numeric"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="30dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:background="@drawable/circle_for_buttons_border"
        android:onClick="onNewFieldDatatypeSelected"
        android:src="@drawable/ic_datatype_numeric_48dp" />

    <ImageButton
        android:id="@+id/datatype_choice_date"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="27dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:background="@drawable/circle_for_buttons_border"
        android:onClick="onNewFieldDatatypeSelected"
        android:src="@drawable/ic_datatype_date_48dp" />

</LinearLayout>