<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.pranjals.nsit.jobtracker.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button android:id="@+id/orderAddButton"
            android:text="ADD ORDER"
            android:onClick="onButtonTapped"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button android:id="@+id/orderViewButton"
            android:text="VIEW ORDER"
            android:onClick="onButtonTapped"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button android:id="@+id/orderListButton"
            android:text="LIST ORDER"
            android:onClick="onButtonTapped"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button android:id="@+id/customerAddButton"
            android:text="ADD CUSTOMER"
            android:onClick="onButtonTapped"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button android:id="@+id/customerViewButton"
            android:text="VIEW CUSTOMER"
            android:onClick="onButtonTapped"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button android:id="@+id/customerListButton"
            android:text="LIST CUSTOMER"
            android:onClick="onButtonTapped"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button android:id="@+id/scanQrcodeButton"
            android:text="SCAN QRCODE"
            android:onClick="onButtonTapped"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</ScrollView>
