<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="4dp"
    card_view:contentPadding="2dp"
    card_view:cardBackgroundColor="#ffffff"
    card_view:cardElevation="4dp">
    <LinearLayout
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:padding="5dp">
        <ImageView
            android:id="@+id/cardView_detail_image"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/ic_launcher"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:layout_weight="2"
            android:padding="5dp">
            <TextView
                android:id="@+id/cardView_detail_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="New Text" />
            <TextView
                android:id="@+id/cardView_detail_doo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text" />
            <TextView
                android:id="@+id/cardView_detail_doc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text" />
            <TextView
                android:id="@+id/cardView_detail_cid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/order_card_progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:padding="6dp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:indeterminate="false"
            android:progressDrawable="@drawable/progress_bar_circular_drawable" />

    </LinearLayout>
</android.support.v7.widget.CardView>