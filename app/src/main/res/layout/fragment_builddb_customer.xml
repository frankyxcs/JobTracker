<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/builddb_customer_fragment"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#fff48fb1" >

    <LinearLayout
        android:id="@+id/builddb_customer_view_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="6dp"
        android:animateLayoutChanges="true" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:textSize="30sp"
            android:textColor="#ff880e4f"
            android:text="Customers"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:textSize="18sp"
            android:textColor="#fffce4ec"
            android:text="\nSame for the customer records!\n\nWe have already included 'Name', 'Mobile', 'Email' and 'Address' as necessary details.\n\nFeel free to add any more. Use the button below.\n"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/builddb_customer_slide2"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="24dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/slide2" />

            <ImageButton
                android:id="@+id/builddb_customer_add_new_field_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginLeft="6dp"
                android:layout_marginBottom="6dp"
                android:background="@drawable/circle_for_buttons"
                android:src="@drawable/ic_add_white_36_in_48dp"
                android:onClick="onAddFieldButtonTapped" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textColor="#fff8bbd0"
                android:text="Done? Why wait?\n"
                android:layout_below="@id/builddb_customer_slide2"/>

        </RelativeLayout>
    </LinearLayout>
</ScrollView>